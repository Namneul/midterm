<%# 1. 레이아웃 파일 지정 %>
<% layout('layout') -%>

<%# 2. 페이지 제목 %>
<h1 class="text-3xl font-bold text-gray-800 mb-3"><%= title %></h1>
<p class="text-gray-600 mb-8">
    환영합니다! 현재 진행 중인 경매 목록을 확인해보세요.
    (로그인 상태: <%= currentUser ? currentUser.anonymousNickname : '비로그인' %>)
</p>

<%# 3. 현재 진행 중인 경매 섹션 %>
<div class="mb-8">
    <h3 class="text-xl font-semibold text-gray-700 mb-4 border-l-4 border-indigo-500 pl-3">🔥 현재 진행 중인 경매</h3>

    <%# ⭐️ Tailwind Grid 레이아웃 적용 (lg: 4열, md: 3열, sm: 2열) %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">

        <% if (items && items.length > 0) { %>
            <% items.forEach(item => { %>
                <%# ⭐️ 카드 스타일 적용 (result-item 클래스 활용) %>
                <div class="result-item bg-white rounded-lg shadow border border-gray-200 overflow-hidden flex flex-col hover:border-indigo-400">
                    <div class="p-4 flex-grow">
                        <h5 class="text-md font-semibold text-gray-900 truncate mb-1"><%= item.title %></h5>
                        <p class="text-sm text-gray-500 mb-2 truncate"><%= item.description %></p>
                        <p class="text-sm font-medium text-indigo-600 mb-1">
                            현재가: <%= item.currentPrice.toLocaleString() %> 원
                        </p>
                        <p class="text-xs text-gray-500">
                            판매자: <%= item.sellerNickname %>
                            <span class="text-purple-600 font-medium">(<%= item.sellerReputationSnapshot || 0 %>점)</span>
                        </p>
                        <p class="text-xs text-gray-400 mt-1">
                            마감: <%= new Date(item.endDate).toLocaleString('ko-KR', { month: 'short', day: 'numeric', hour: 'numeric', minute:'2-digit' }) %>
                        </p>
                    </div>
                    <%# ⭐️ 카드 하단에 버튼 추가 %>
                    <div class="bg-gray-50 px-4 py-2 border-t border-gray-200">
                        <a href="/community/auction/<%= item._id %>" class="block text-center text-sm font-medium text-indigo-600 hover:text-indigo-800">
                            입찰하기 &rarr;
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-span-full">
                <p class="text-gray-500 p-4 bg-white rounded-lg border text-center">현재 진행 중인 경매가 없습니다.</p>
            </div>
        <% } %>

    </div>
</div>

<%# 4. 페이지네이션 (Tailwind 스타일 적용) %>
<% if (totalPages > 1) { %>
    <nav class="mt-10 flex justify-center" aria-label="Page navigation">
        <ul class="flex items-center -space-x-px h-8 text-sm">
            <%# 이전 버튼 %>
            <li>
                <a href="/?page=<%= currentPage - 1 %>"
                   class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 <%= currentPage <= 1 ? 'pointer-events-none opacity-50' : '' %>">
                    <span class="sr-only">Previous</span>
                    <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                    </svg>
                </a>
            </li>
            <%# 페이지 번호 %>
            <%
                const maxPagesToShow = 5; // 중앙에 표시할 최대 페이지 수 (홀수 권장)
                let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                if (endPage - startPage + 1 < maxPagesToShow) {
                    startPage = Math.max(1, endPage - maxPagesToShow + 1);
                }
            %>
            <% for (let i = startPage; i <= endPage; i++) { %>
                <li>
                    <a href="/?page=<%= i %>"
                       class="flex items-center justify-center px-3 h-8 leading-tight border border-gray-300 <%= i === currentPage ? 'text-indigo-600 bg-indigo-50 hover:bg-indigo-100 hover:text-indigo-700 font-semibold' : 'text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700' %>">
                        <%= i %>
                    </a>
                </li>
            <% } %>
            <%# 다음 버튼 %>
            <li>
                <a href="/?page=<%= currentPage + 1 %>"
                   class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 <%= currentPage >= totalPages ? 'pointer-events-none opacity-50' : '' %>">
                    <span class="sr-only">Next</span>
                    <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                </a>
            </li>
        </ul>
    </nav>
<% } %>

<%# ⭐️ 검색 결과 페이지와 동일한 hover 효과 CSS 추가 %>
<style>
    .result-item { transition: transform 0.2s ease-out, box-shadow 0.2s ease-out; }
    .result-item:hover { transform: translateY(-3px); box-shadow: 0 6px 12px rgba(0, 0, 0, 0.07); }
</style>