<% layout('layout') -%>

<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800"><%= title %></h1>

    <%# ⭐️ [추가] '전체 읽음' 버튼 폼 %>
    <% if (notifications.some(noti => !noti.isRead)) { %> <%# 읽지 않은 알림이 있을 때만 버튼 표시 %>
    <form action="/notifications/read-all?_method=PUT" method="POST">
        <button type="submit"
                class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="-ml-0.5 mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.018 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
            </svg>
            모두 읽음으로 표시
        </button>
    </form>
    <% } %>
</div>

<div class="bg-white shadow overflow-hidden rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
        <% if (notifications.length > 0) { %>
            <% notifications.forEach(noti => { %>
                <li class="<%= noti.isRead ? 'bg-white hover:bg-gray-50' : 'bg-yellow-50 hover:bg-yellow-100 font-medium' %> transition duration-150 ease-in-out">
                    <div class="px-4 py-4 sm:px-6 flex items-center justify-between space-x-3">
                        <%# 알림 내용 및 링크 %>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm <%= noti.isRead ? 'text-gray-700' : 'text-yellow-900' %> truncate">
                                <%= noti.message %>
                            </p>
                            <p class="text-xs text-gray-400 mt-1 flex items-center space-x-2">
                                <span><%= new Date(noti.createdAt).toLocaleString() %></span>
                                <% if (noti.link) { %>
                                    <span class="text-gray-300">|</span>
                                    <a href="<%= noti.link %>" class="text-indigo-600 hover:underline">
                                        바로가기 &rarr;
                                    </a>
                                <% } %>
                            </p>
                        </div>

                        <%# 읽음/삭제 버튼 영역 %>
                        <div class="flex-shrink-0 flex items-center space-x-2">
                            <%# 읽음 처리 버튼 (읽지 않은 알림) %>
                            <% if (!noti.isRead) { %>
                                <form action="/notifications/read/<%= noti._id %>?_method=PUT" method="POST" title="읽음으로 표시">
                                    <button type="submit" class="p-1 rounded-full text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
                                    </button>
                                </form>
                            <% } %>

                            <%# ⭐️ [추가] 개별 삭제 버튼 폼 %>
                            <form action="/notifications/<%= noti._id %>?_method=DELETE" method="POST" title="알림 삭제" onsubmit="return confirm('이 알림을 삭제하시겠습니까?');">
                                <button type="submit" class="p-1 rounded-full text-gray-400 hover:text-red-600 hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    <span class="sr-only">알림 삭제</span>
                                    <%# 휴지통 아이콘 SVG %>
                                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <li class="px-4 py-4 sm:px-6 text-center text-sm text-gray-500">
                표시할 알림이 없습니다.
            </li>
        <% } %>
    </ul>
</div>