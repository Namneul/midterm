<%# 1. 레이아웃 파일 지정 %>
<% layout('layout') -%>

<%# 2. 페이지 제목 및 새 글 버튼 %>
<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800"><%= title %></h1>
    <a href="/community/auction/new" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        새 경매 등록
    </a>
</div>

<%# 3. 경매 목록 (Grid 레이아웃) %>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">

    <% if (items && items.length > 0) { %>
        <% items.forEach(item => { %>
            <%# 카드 스타일 %>
            <div class="result-item bg-white rounded-lg shadow border border-gray-200 overflow-hidden flex flex-col hover:border-indigo-400">
                <div class="p-4 flex-grow">
                    <h5 class="text-md font-semibold text-gray-900 truncate mb-1"><%= item.title %></h5>
                    <p class="text-sm text-gray-500 mb-2 truncate h-10"><%= item.description %></p> <%# 높이 고정 %>
                    <p class="text-sm font-medium text-indigo-600 mb-1">
                        현재가: <%= item.currentPrice.toLocaleString() %> 원
                    </p>
                    <p class="text-xs text-gray-500">
                        판매자: <%= item.sellerNickname %>
                        <span class="text-purple-600 font-medium">(<%= item.sellerReputationSnapshot || 0 %>점)</span>
                    </p>
                    <p class="text-xs text-gray-400 mt-1">
                        마감: <%= new Date(item.endDate).toLocaleString('ko-KR', { month: 'short', day: 'numeric', hour: 'numeric', minute:'2-digit' }) %>
                        <%# 마감 임박 시 빨간색 표시 (예: 1시간 미만) %>
                        <% if (new Date(item.endDate).getTime() - Date.now() < 3600000) { %>
                            <span class="text-red-500 font-medium ml-1">🚨</span>
                        <% } %>
                    </p>
                </div>
                <%# 카드 하단 버튼 %>
                <div class="bg-gray-50 px-4 py-2 border-t border-gray-200">
                    <a href="/community/auction/<%= item._id %>" class="block text-center text-sm font-medium text-indigo-600 hover:text-indigo-800">
                        입찰하기 &rarr;
                    </a>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-span-full">
            <p class="text-gray-500 p-4 bg-white rounded-lg border text-center">현재 진행 중인 경매가 없습니다.</p>
        </div>
    <% } %>

</div>

<%# 4. 페이지네이션 (Tailwind 스타일) %>
<% if (totalPages > 1) { %>
    <nav class="mt-10 flex justify-center" aria-label="Page navigation">
        <ul class="flex items-center -space-x-px h-8 text-sm">
            <%# 이전 버튼 %>
            <li>
                <a href="/community/auction?page=<%= currentPage - 1 %>" <%# 경로 확인 %>
                   class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 <%= currentPage <= 1 ? 'pointer-events-none opacity-50' : '' %>">
                    <span class="sr-only">Previous</span>
                    <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/></svg>
                </a>
            </li>
            <%# 페이지 번호 %>
            <%
                const maxPagesToShow = 5;
                let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                if (endPage - startPage + 1 < maxPagesToShow) { startPage = Math.max(1, endPage - maxPagesToShow + 1); }
            %>
            <% for (let i = startPage; i <= endPage; i++) { %>
                <li>
                    <a href="/community/auction?page=<%= i %>" <%# 경로 확인 %>
                       class="flex items-center justify-center px-3 h-8 leading-tight border border-gray-300 <%= i === currentPage ? 'text-indigo-600 bg-indigo-50 hover:bg-indigo-100 hover:text-indigo-700 font-semibold' : 'text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700' %>"><%= i %></a>
                </li>
            <% } %>
            <%# 다음 버튼 %>
            <li>
                <a href="/community/auction?page=<%= currentPage + 1 %>" <%# 경로 확인 %>
                   class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 <%= currentPage >= totalPages ? 'pointer-events-none opacity-50' : '' %>">
                    <span class="sr-only">Next</span>
                    <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/></svg>
                </a>
            </li>
        </ul>
    </nav>
<% } %>

<%# 카드 호버 효과 CSS %>
<style>
    .result-item { transition: transform 0.2s ease-out, box-shadow 0.2s ease-out; }
    .result-item:hover { transform: translateY(-3px); box-shadow: 0 6px 12px rgba(0, 0, 0, 0.07); }
</style>