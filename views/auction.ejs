<% layout('layout') -%>

<h1>진행 중인 경매</h1>
<a href="/community/auction/new" class="btn btn-primary mb-3">경매 등록하기</a>

<div class="auction-list">
    <% if (items.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% items.forEach(item => { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.title %></h5>
                            <p class="card-text"><%= item.description.substring(0, 100) %>...</p>
                            <p class="card-text">
                                <strong>현재가:</strong> <%= item.currentPrice.toLocaleString() %> 원
                            </p>
                            <p class="card-text">
                                <small class="text-muted">판매자: <%= item.sellerNickname %></small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">마감: <%= new Date(item.endDate).toLocaleString() %></small>
                            </p>
                            <a href="/community/auction/<%= item._id %>" class="btn btn-primary">입찰하기</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>현재 진행 중인 경매가 없습니다.</p>
    <% } %>
</div>

<nav class="mt-4" aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/auction?page=<%= currentPage - 1 %>">이전</a>
            </li>
        <% } else { %>
            <li class="page-item disabled"><a class="page-link" href="#">이전</a></li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#"><%= i %></a>
                </li>
            <% } else { %>
                <li class="page-item">
                    <a class="page-link" href="/auction?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="/auction?page=<%= currentPage + 1 %>">다음</a>
            </li>
        <% } else { %>
            <li class="page-item disabled"><a class="page-link" href="#">다음</a></li>
        <% } %>
    </ul>
</nav>