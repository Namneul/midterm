<% layout('layout', { title: 'UserProfile' }) %>
<section class="card max-640">
    <h1>UserProfile</h1>
    <div class="profile">
        <div class="avatar">U</div>
        <div>
            <div class="label">이름</div>
            <div class="value"><%= user.name %></div>
            <div class="label">아이디</div>
            <div class="value"><%= user.id %></div>
            <div class="label mt-12">이메일</div>
            <div class="value"><%= user.email %></div>
        </div>
    </div>

    <div class="divider"></div>

    <div class="grid-3">
        <a class="btn ghost" href="/community">커뮤니티로 가기</a>
        <a class="btn ghost" href="/">메인으로</a>
        <a class="btn ghost" href="/auth/logout">로그아웃</a>
    </div>
</section>
