<% layout('layout') -%>

<h1><%= title %></h1>

<form action="/community/buy-sell" method="POST">

    <div class="mb-3">
        <label class="form-label">분류</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="postType" id="typeSell" value="sell" required>
                <label class="form-check-label" for="typeSell">팝니다 (Sell)</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="postType" id="typeBuy" value="buy">
                <label class="form-check-label" for="typeBuy">삽니다 (Buy)</label>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label for="title" class="form-label">제목</label>
        <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="mb-3">
        <label for="content" class="form-label">내용</label>
        <textarea class="form-control" id="content" name="content" rows="10" required></textarea>
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">가격 (원)</label>
        <input type="number" class="form-control" id="price" name="price" min="0" required>
    </div>

    <button type="submit" class="btn btn-success">글 등록하기</button>
</form>